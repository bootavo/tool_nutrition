<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="2. PLIEGUE CUTÁNEO TRICIPITAL"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pct"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="pliegue cutáneo tricipital"
            android:digits="0123456789."
            android:inputType="phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="milímetros (mm)"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="3. CIRCUNFERENCIA MUSCULAR EN BRAZO"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cb"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="circunferencia en brazo"
            android:inputType="numberDecimal"
            android:digits="0123456789."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="centímetros (cm)"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="4. PERÍMETRO ABDOMINAL"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="perímetro abdominal"
            android:digits="0123456789."
            android:inputType="phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="centímetros (cm)"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            />

    </LinearLayout>

</LinearLayout>