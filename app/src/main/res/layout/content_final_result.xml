<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="INTERPRETACIÓN DEL DIAGNÓSTICO"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_value_results"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Ingrese aquí su interpretación"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="RECOMENDACIÓN"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_action_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="ENVIAR EMAIL A:"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="DATOS DEL PACIENTE:"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 anios"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="DATOS DE HISTORIA"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:text="Fecha"
            android:textColor="@color/primary_text"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_history_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el número de historia clínica"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la fecha de ingreso"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            />

        <EditText
            android:id="@+id/et_bed_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el número de cama"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="numberSigned"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_place_incoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar de procedencia"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="text"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_place_coming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar de residencia"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/primary_text"
            android:inputType="text"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</LinearLayout>