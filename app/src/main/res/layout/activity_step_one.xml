<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Volver"
                    android:textSize="@dimen/content"
                    android:textColor="@color/secondary_text"
                    android:textStyle="normal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/tv_title_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Paso 4 de 8"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Siguiente"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:gravity="center_horizontal|center_vertical"/>

            </RelativeLayout>

        </LinearLayout>

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/toolbar_dropshadow"/>

            <View
                android:id="@+id/v_tab"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@drawable/toolbar_dropshadow_tab"/>

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/content_step_one"
            />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/bg_button_rounded_primary"
            android:text="Siguiente"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/btn_title"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</RelativeLayout>